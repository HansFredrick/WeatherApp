<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/place"
        android:padding="10sp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baguio City"
        />
    <TextView
        android:id="@+id/temperature"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25째C" />
    <TextView
        android:id="@+id/condition"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunny" />

    <LinearLayout
        android:layout_width="2.3in"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:id="@+id/location"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"

            />


    </LinearLayout>

    <!-- horizontal view for hourly updates  -->

    <HorizontalScrollView
        android:id="@+id/horizontal"
        android:layout_width="2.3in"
        android:layout_marginHorizontal="12dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="horizontal">

        <LinearLayout
            android:id="@+id/hourContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Your horizontally laid out views (e.g., buttons, cards) -->
<!--            1am-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1am"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="<3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="25째C"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2am"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="<3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="25째C"/>

            </LinearLayout>




            <!-- Add more as needed -->

        </LinearLayout>
    </HorizontalScrollView>

    <!--  layout for weekly forecast -->
    <TextView
        android:id="@+id/forecastHeader"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10-DAY FORECAST"

        />
    <LinearLayout
        android:id="@+id/forecastContainer"
        android:layout_width="2.3in"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:orientation="vertical"
        android:padding="10sp">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical">

<!--            <ImageView-->
<!--                android:id="@+id/weatherIcon"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:src="@drawable/ic_sunny" />-->

            <TextView
                android:id="@+id/weatherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday - 28째C"
                android:paddingStart="16dp"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <!--  layout for air quality -->
    <LinearLayout
        android:layout_width="2.3in"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:id="@+id/windSpeed"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:text="WIND SPEED"

            />


    </LinearLayout>





</LinearLayout>