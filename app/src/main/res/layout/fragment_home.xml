<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- City Name -->
        <TextView
            android:id="@+id/tvLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baguio City"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Temperature -->
        <TextView
            android:id="@+id/tvCurrentTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25Â°C"
            android:textSize="50sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <!-- Condition -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/tvCurrentWeatherCondition"
                android:layout_height="match_parent"
                android:text="Sunny"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ivCurrentConditionIcon"
                android:layout_height="48dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>
        </LinearLayout>


        <!-- Location Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@android:color/darker_gray">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLocationCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Country"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tvLocationTimeZone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time Zone"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/tvLocationTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Location Time"
                android:textSize="18sp"
                android:padding="12dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                />


        </LinearLayout>


        <!-- Forecast Header -->
        <TextView
            android:id="@+id/forecastHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10-DAY FORECAST"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingTop="24dp"
            android:paddingBottom="12dp" />

        <!-- Forecast Container -->
        <!-- RecyclerView for Forecast Items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="8dp"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="24dp" />

        <!-- Grouped Layout: Air Quality + Wind Speed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp">

            <!-- Air Quality Block -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#963CA4EB"
                android:padding="12dp"
                android:layout_marginEnd="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="Air Quality Index:"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/tvCurrentAirQuality"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Good"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                </LinearLayout>
            </LinearLayout>

            <!-- Wind Speed Block -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/holo_green_light"
                android:padding="6dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WIND SPEED"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/tvCurrentWindSpeedKilometers"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="13.5"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/tvCurrentWindSpeedMiles"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="6.7"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Grouped Layout: UV  + precipitation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- UV Block -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#AFE98F4B"
                android:padding="15sp"
                android:layout_marginEnd="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="UV Index:"
                        android:textColor="@android:color/white"
                        android:textAlignment="center"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/tvCurrentUVIndex"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="10.3"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                </LinearLayout>
            </LinearLayout>

            <!-- PRECIPITATION Block -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#806129C1"
                android:padding="6dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRECIPITATION"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/tvCurrentPrecipitationInch"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="13.5"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/tvCurrentPrecipitationMm"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="6.7"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
